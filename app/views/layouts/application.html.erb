<!DOCTYPE html>
<html lang="ja">

<head>
    <title>Atelier144</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
    <header>
        <%= link_to("", "/", class: "logo") %>
        <ul class="menu">
            <li>
                <%= link_to("ブラウザゲーム集", "/games") %>
            </li>
            <li>
                <%= link_to("アプリ集", "/apps") %>
            </li>
            <li>
                <div class="separate"></div>
            </li>
            <% if @current_user %>
            <li>
                <div class="user-image">
                    <%= image_tag(@current_user.image_name.url) %>
                </div>
            </li>
            <% else %>
            <li>
                <%= link_to("ログイン", "/login") %>
            </li>
            <li>
                <%= link_to("新規登録", "/signup") %>
            </li>
            <% end %>
        </ul>
        <div class="hamburger"></div>
        <% if @current_user %>
        <div class="popup-menu">
            <div class="close"></div>
            <%= image_tag(@current_user.image_name.url) %>
            <p><%= @current_user.name %></p>
            <ul>
                <li>
                    <%= link_to("/profiles/#{@current_user.id}") do %><i class="far fah fa-id-card"></i>プロフィール<% end %>
                </li>
                <li>
                    <%= link_to("/settings/profile") do %><i class="fas fah fa-user-cog"></i>アカウント設定<% end %>
                </li>
                <li>
                    <%= link_to("/logout", method: "POST") do %><i class="fas fah fa-sign-out-alt"></i>ログアウト<% end %>
                </li>
            </ul>
        </div>
        <% end %>
        <div class="pulldown-menu">
            <ul>
                <li>
                    <%= link_to("アプリ集","/apps")%>
                </li>
            </ul>
            <div class="user-information">
                <% if @current_user %>
                <div class="user">
                    <%= image_tag(@current_user.image_name.url)%>
                    <p><%= @current_user.name %></p>
                </div>
                <ul>
                    <li>
                        <%= link_to("/profiles/#{@current_user.id}") do %><i class="far fah fa-id-card"></i>プロフィール<% end %>
                    </li>
                    <li>
                        <%= link_to("/settings/profile") do %><i class="fas fah fa-user-cog"></i>アカウント設定<% end %>
                    </li>
                    <li>
                        <%= link_to("/logout", method: "POST") do %><i class="fas fah fa-sign-out-alt"></i>ログアウト<% end %>
                    </li>
                </ul>
                <% else %>
                <ul>
                    <li>
                        <%= link_to("ログイン", "/login")%>
                    </li>
                    <li>
                        <%= link_to("新規登録", "/signup")%>
                    </li>
                </ul>
                <% end %>
            </div>
        </div>
    </header>
    <%= yield %>
    <div class="page-top"><i class="fas fa-angle-up"></i></div>
    <footer>
        <ul class="menu">
            <li>
                <%= link_to("ホーム","/")%>
            </li>
            <li>
                <%= link_to("ブラウザゲーム集","/games")%>
            </li>
            <li>
                <%= link_to("アプリ集","/apps")%>
            </li>
            <li>
                <%= link_to("更新情報","/news")%>
            </li>
            <li>
                <%= link_to("利用規約","/terms")%>
            </li>
            <li>
                <%= link_to("プライバシーポリシー","/privacy")%>
            </li>
            <li>
                <%= link_to("お問い合わせ","/contact")%>
            </li>
        </ul>
        <h5>公式Twitter</h5>
        <a href="https://twitter.com/GameAtelier144" target="_blank" class="twitter"></a>
        <div class="copyrights">Copyright <i class="far fa-copyright"></i> 2020 Atelier144 All Rights Reserved.</div>
    </footer>
    <% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
    </div>
    <% end %>
</body>

</html>
