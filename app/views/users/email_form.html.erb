<h1>アカウント設定</h1>
<ul class="setting-menu">
    <li>
        <%= link_to("プロフィール設定", "/settings/profile") %>
    </li>
    <li>
        <%= link_to("パスワード設定", "/settings/password") %>
    </li>
    <li>
        <%= link_to("メールアドレス設定", "/settings/email") %>
    </li>
    <li>
        <%= link_to("SNS設定", "/settings/social") %>
    </li>
    <li>
        <%= link_to("レコード設定", "/settings/records") %>
    </li>
</ul>

<% if @current_user.email %>

<%= form_tag("/settings/email", class: "form-beta") do %>
<h3>メールアドレス設定</h3>

<h5>現在のメールアドレス</h5>
<input type="email" name="current_email" value="<%= flash[:current_email] %>">
<% if flash[:current_email_warning] %>
<div class="confirmation-message warning"><%= flash[:current_email_warning] %></div>
<% end %>

<h5 style="margin-top:20px">新しいメールアドレス</h5>
<input type="email" name="new_email" value="<%= flash[:new_email] %>">
<% if flash[:new_email_warning] %>
<div class="confirmation-message warning"><%= flash[:new_email_warning] %></div>
<% end %>

<input type="submit" value="更新" style="margin-top:40px">
<% end %>

<% else %>

<%= form_tag("/settings/email/create", class: "form-beta") do %>
<h3>メールアドレス設定</h3>
<div class="email-notice">このアカウントにはメールアドレスが登録されていません</div>
<div class="email-notice-description">メールアドレスおよびパスワードの登録を行ってください。<br>また登録後、メールアドレスでのログインおよびSNSとの連携解除ができるようになります。</div>
<hr style="margin-top:20px">

<h5 style="margin-top:20px">メールアドレス</h5>
<input type="email" name="email" value="<%= flash[:create_email_email] %>">
<% if flash[:create_email_email_warning] %>
<div class="confirmation-message warning"><%= flash[:create_email_email_warning] %></div>
<% end %>

<h5 style="margin-top:20px">パスワード（8字以上、32字以下）</h5>
<input type="password" name="password" value="<%= flash[:create_email_password] %>">
<% if flash[:create_email_password_warning] %>
<div class="confirmation-message warning"><%= flash[:create_email_password_warning] %></div>
<% end %>

<h5 style="margin-top:20px">パスワード（再入力）</h5>
<input type="password" name="password_confirmation" value="<%= flash[:create_email_password_confirmation] %>">
<% if flash[:create_email_password_confirmation_warning] %>
<div class="confirmation-message warning"><%= flash[:create_email_password_confirmation_warning] %></div>
<% end %>

<input type="submit" value="登録" style="margin-top:40px">
<% end %>

<% end %>
